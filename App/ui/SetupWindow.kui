
element SetupWindowElement
{
	orientation = vertical;
	position = (-1, -1);

	child UIBox content
	{
		orientation = vertical;
		minSize = (2, 1.8);
	}
	child UIBox buttonBox
	{
		minSize = (2, 0.2);
		horizontalAlign = reverse;
		verticalAlign = default;

		child UIButton nextButton
		{
			padding = 5px;
			color = highlightColor;
			child UIText
			{
				padding = 5px;
				leftPadding = 10px;
				rightPadding = 10px;
				text = "Next";
				size = 12px;
			}
		}
	}
}
