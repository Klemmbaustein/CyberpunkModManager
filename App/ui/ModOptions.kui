
element ModOption
{
	var OptionName = "Option name";

	child UIButton button
	{
		padding = 6px;
		border = 2px;
		borderColor = highlightColor;
		minSize = (300, 30)px;
		color = 0.075;

		verticalAlign = centered;

		child UIText
		{
			padding =  5px;
			text = OptionName;
			size = 12px;
			color = 1;
		}
	}
}